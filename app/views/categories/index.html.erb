<div class="col-md-6 col-md-offset-2">
<h1>所有分類</h1>

<table class="table">
  <thead>
    <tr>
      <th>名稱</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to '顯示', category, class: "btn" %></td>
        <td><%= link_to '修改', edit_category_path(category), class: "btn" %></td>
        <td><%= link_to '刪除', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %></td>
      </tr>
    <% end %>
    <%= paginate @categories %>
  </tbody>
</table>
<br>

<%= link_to '新分類', new_category_path, class: "btn" %>
</div>

